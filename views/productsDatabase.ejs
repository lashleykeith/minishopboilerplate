<% include partials/header %>
    <div class="hero-wrap hero-bread" style="background-image: url('images/bg_6.jpg');">
      <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
            <h1 class="mb-0 bread">Shop</h1>
          </div>
        </div>
      </div>
    </div>

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            <!--------------------------------------------------------------->
            <div class="col-md-8 col-lg-10 order-md-last">
                <!--Products-->
                <div class="row">
                    <% products.forEach(function (product) { %>
                        <div class="col-sm-12 col-md-12 col-lg-4 ftco-animate d-flex">
                        <div class="product d-flex flex-column">
                            <a href="#" class="img-prod"><img class="img-fluid" src="/product_image/<%=product._id%>/<%=product.image%>" alt="Colorlib Template">
                                <div class="overlay"></div>
                            </a>
                            <div class="text py-3 pb-4 px-3">
                                <h3><a href="#"><%= product.title %></a></h3>
                                <div class="pricing">
                                    <p class="price"><span>$<%= product.price %></span></p>
                                </div>
                                <div class="bottom-area d-flex px-3">
                                    <a href="/shop/edit-product/<%=product._id%>" class="btn btn-primary py-2 mr-1">Edit</a>
                                    <a href="/shop/delete-product/<%=product._id%>" class="btn btn-danger py-2 mr-1">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                </div>
                <!--Pagination-->
                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <% if (totalProducts>6){ %>
                            <ul class="pagination">
                                <% if (currentPage !== 1 && previousPage !== 1) { %>
                                <li><a href="?page=1">1</a></li>
                                <% } %>
                                <% if (hasPreviousPage) { %>
                                <li><a href="?page=<%= previousPage %>"><%= previousPage %></a></li>
                                <% } %>
                                <li class="active"><a href="?page=<%= currentPage %>"><%= currentPage %></a></li>
                                <% if (hasNextPage) { %>
                                <li><a href="?page=<%= nextPage %>"><%= nextPage %></a></li>
                                <% } %>
                                <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
                                <li><a href="?page=<%= lastPage %>"><%= lastPage %></a></li>
                                <% } %>
                            </ul>
                            <%} else if (totalProducts < 1)  {%>
                                <h2>No Products In This Category</h2>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <!--------------------------------------------------------------->
            <div class="col-md-4 col-lg-2">
                <div class="sidebar">
                    <!--Categories-->
                    <div class="sidebar-box-2">
                        <h2 class="heading">Categories</h2>
                        <div class="fancy-collapse-panel">
                            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingOne">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                Men's Shoes
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseOne" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                                        <div class="panel-body">
                                            <ul>
                                                <li><a href="/shop/searchProductsDatabase/MEN'SSHOES/Sports">Sport</a></li>
                                                <li><a href="/shop/searchProductsDatabase/MEN'SSHOES/Casual">Casual</a></li>
                                                <li><a href="/shop/searchProductsDatabase/MEN'SSHOES/Running">Running</a></li>
                                                <li><a href="/shop/searchProductsDatabase/MEN'SSHOES/Jordan">Jordan</a></li>
                                                <li><a href="/shop/searchProductsDatabase/MEN'SSHOES/Soccer">Soccer</a></li>
                                                <li><a href="/shop/searchProductsDatabase/MEN'SSHOES/Football">Football</a></li>
                                                <li><a href="/shop/searchProductsDatabase/MEN'SSHOES/Lifestyle">Lifestyle</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingTwo">
                                        <h4 class="panel-title">
                                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                                Women's Shoes
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                                        <div class="panel-body">
                                            <ul>
                                                <li><a href="/shop/searchProductsDatabase/WOMEN'SSHOES/Sports">Sport</a></li>
                                                <li><a href="/shop/searchProductsDatabase/WOMEN'SSHOES/Casual">Casual</a></li>
                                                <li><a href="/shop/searchProductsDatabase/WOMEN'SSHOES/Running">Running</a></li>
                                                <li><a href="/shop/searchProductsDatabase/WOMEN'SSHOES/Jordan">Jordan</a></li>
                                                <li><a href="/shop/searchProductsDatabase/WOMEN'SSHOES/Soccer">Soccer</a></li>
                                                <li><a href="/shop/searchProductsDatabase/WOMEN'SSHOES/Football">Football</a></li>
                                                <li><a href="/shop/searchProductsDatabase/WOMEN'SSHOES/Lifestyle">Lifestyle</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingThree">
                                        <h4 class="panel-title">
                                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                                Accessories
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
                                        <div class="panel-body">
                                            <ul>
                                                <li><a href="/shop/searchProductsDatabase/ACCESSORIES/Jeans">Jeans</a></li>
                                                <li><a href="/shop/searchProductsDatabase/ACCESSORIES/T-Shirt">T-Shirt</a></li>
                                                <li><a href="/shop/searchProductsDatabase/ACCESSORIES/Jacket">Jacket</a></li>
                                                <li><a href="/shop/searchProductsDatabase/ACCESSORIES/Shoes">Shoes</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                                <div class="panel panel-default">
                                    <div class="panel-heading" role="tab" id="headingFour">
                                        <h4 class="panel-title">
                                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseFour" aria-expanded="false" aria-controls="collapseThree">
                                                Clothing
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="collapseFour" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingFour">
                                        <div class="panel-body">
                                            <ul>
                                                <li><a href="/shop/searchProductsDatabase/CLOTHING/Jeans">Jeans</a></li>
                                                <li><a href="/shop/searchProductsDatabase/CLOTHING/T-Shirt">T-Shirt</a></li>
                                                <li><a href="/shop/searchProductsDatabase/CLOTHING/Jacket">Jacket</a></li>
                                                <li><a href="/shop/searchProductsDatabase/CLOTHING/Shoes">Shoes</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!--Price Range Search-->
                    <div class="sidebar-box-2">
                        <h2 class="heading">Price Range</h2>
                        <form  action="/shop/priceProductsDatabase" method="post" class="colorlib-form-2">
                            <input type='hidden' name='_csrf' value=_csrf>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="guests">Price from:</label>
                                        <div class="form-field">
                                            <i class="icon icon-arrow-down3"></i>
                                            <select name="priceFrom" id="people" class="form-control">
                                                <option value="1">1</option>
                                                <option value="200">200</option>
                                                <option value="300">300</option>
                                                <option value="400">400</option>
                                                <option value="500">1000</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label for="guests">Price to:</label>
                                        <div class="form-field">
                                            <i class="icon icon-arrow-down3"></i>
                                            <select name="priceTo" id="people" class="form-control">
                                                <option value="1">1</option>
                                                <option value="200">200</option>
                                                <option value="300">300</option>
                                                <option value="400">400</option>
                                                <option value="500">1000</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-field">
                                        <button class="btn btn-black">Search</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--------------------------------------------------------------->
        </div>
    </div>
</section>

<% include partials/footer %>