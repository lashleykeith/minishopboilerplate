<!--------------------------------------------------------------->
    			<div class="col-md-8 col-lg-10 order-md-last">
                    <!--Products-->
                    <div class="row">
                        <% products.forEach(function (product) { %>
                        <div class="col-sm-12 col-md-12 col-lg-4 ftco-animate d-flex">
                            <div class="product d-flex flex-column">
                                <a href="/product-single/readmore/<%=product._id%>" class="img-prod"><img class="img-fluid" src="/product_image/<%=product._id%>/<%=product.image%>" alt="Colorlib Template">
                                    <div class="overlay"></div>
                                </a>
                                <div class="text py-3 pb-4 px-3">
                                    <h3><a href="#"><%= product.title %></a></h3>
                                    <div class="pricing">
                                        <p class="price"><span>$<%= product.price %></span></p>
                                    </div>
                                    <p class="bottom-area d-flex px-3">
                                        <a href="/cart/add-to-cart/<%=product._id%>/<%=product.category%>" class="add-to-cart text-center py-2 mr-1"><span>Add to cart <i class="ion-ios-add ml-1"></i></span></a>
                                        <a href="/shop" class="buy-now text-center py-2">Buy now<span><i class="ion-ios-cart ml-1"></i></span></a>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                    </div>
                    <!--Pagination-->
                    <div class="row mt-5">
                        <div class="col text-center">
                            <div class="block-27">
                                <% if (totalProducts>6){ %>
                                <ul class="pagination">
                                    <% if (currentPage !== 1 && previousPage !== 1) { %>
                                    <li><a href="?page=1">1</a></li>
                                    <% } %>
                                    <% if (hasPreviousPage) { %>
                                    <li><a href="?page=<%= previousPage %>"><%= previousPage %></a></li>
                                    <% } %>
                                    <li class="active"><a href="?page=<%= currentPage %>"><%= currentPage %></a></li>
                                    <% if (hasNextPage) { %>
                                    <li><a href="?page=<%= nextPage %>"><%= nextPage %></a></li>
                                    <% } %>
                                    <% if (lastPage !== currentPage && nextPage !== lastPage) { %>
                                    <li><a href="?page=<%= lastPage %>"><%= lastPage %></a></li>
                                    <% } %>
                                </ul>
                                <%} else if (totalProducts < 1)  {%>
                                <h2>No Products In This Category</h2>
                                <% } %>
                            </div>
                        </div>
                    </div>
		    	</div>
